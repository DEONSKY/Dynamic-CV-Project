
@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row my-3">
        <div class="col-12 text-center">
            <h1>My Projects</h1>
        </div>
    </div>
    <div class="row my-3">
        @foreach (var itm in Model.Projects)
        {
        <div class="col-md-6 px-3 py-5">
            <div class="row">
                <div class="col-12">
                    <a href="@itm.Link"style="position:absolute; align-content:end;"class="justify-content-end"><i class="fas fa-link fa-1x"></i></a>
                    <h3 class="text-center px-4">@itm.Title_EN</h3>

                </div>
            </div>
            <div class="row">
                <div class="col-12 pt-2">
                    <img class="img-fluid" src="@itm.ImageURL" />
                </div>
            </div>
            <div class="row">
                <div class="col-12 pt-2">
                    <div>@itm.Description_EN</div>
                </div>
            </div>
        </div>
        }
    </div>
