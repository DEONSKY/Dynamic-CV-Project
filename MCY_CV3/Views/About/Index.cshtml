
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using MCY_CV3.Models.Context
@using MCY_CV3.Models.Tables
@model List<About>



<div class="row">
    <div class="display-3 mx-auto">Abouts</div>
</div>
<div class="d-block">

    <div class="row">
        <div class="col-1">AboutID</div>
        <div class="col-5">AboutMe</div>
        <div class="col-2">Image</div>
    </div>
    @if (Model != null)
    {
        foreach (var itm in Model)
        {
            <div class="row border border-info">
                <div class="col-1">@itm.ID</div>
                <div class="col-5">@itm.AboutMe</div>
                <div class="col-2"><img class="img-fluid" src="@itm.ImageURL" /></div>
                <div class="col-1"><a href="/About/Delete/@itm.ID" class="btn btn-danger">Delete</a></div>
                <div class="col-1"><a href="/About/Update/@itm.ID" class="btn btn-primary">Update</a></div>
            </div>

        }
    }
    else
    {
        <div class="row">
            <div class="mx-auto"><h5>there is no data here</h5> </div>
        </div>
    }

</div>
<a href="/About/Add" class="btn btn-success">Add About</a>

