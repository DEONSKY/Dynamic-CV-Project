
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using MCY_CV3.Models.Context
@using MCY_CV3.Models.Tables
@model List<Education>



<div class="row">
    <div class="display-3 mx-auto">Education</div>
</div>
<div class="d-block">

    <div class="row">
        <div class="col-1">EducationID</div>
        <div class="col-5">Description</div>
        <div class="col-2">Start Date</div>
        <div class="col-2">End Date</div>
    </div>
    @if (Model != null)
    {
        foreach (var itm in Model)
        {
            <div class="row border border-info mx-1">
                <div class="col-md-1">@itm.EducationID</div>
                <div class="col-md-5">@itm.Description_EN</div>
                <div class="col-md-2">@if (@itm.StartDate != null) {@itm.StartDate.Value.ToShortDateString()}</div>
                <div class="col-md-2">@if (@itm.EndDate != null) {@itm.EndDate.Value.ToShortDateString()}</div>
                <div class="col-md-1"><a href="/Education/Delete/@itm.EducationID" class="btn btn-danger">Delete</a></div>
                <div class="col-md-1"><a href="/Education/Update/@itm.EducationID" class="btn btn-primary">Update</a></div>
            </div>

        }
    }
    else
    {
        <div class="row">
            <div class="mx-auto"><h5>there is no data here</h5> </div>
        </div>
    }

</div>
<a href="/Education/Add" class="btn btn-success">Add Education</a>
