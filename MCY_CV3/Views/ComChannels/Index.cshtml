
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using MCY_CV3.Models.Context
@using MCY_CV3.Models.Tables
@model List<ComChannel>



<div class="row">
    <div class="display-3 mx-auto">ComChannels</div>
</div>
<div class="d-block">

    <div class="row">
        <div class="col-2">ComChannelID</div>
        <div class="col-4">Title</div>
        <div class="col-2">Link</div>
        <div class="col-2">Symbol</div>
    </div>
    @if (Model != null)
    {
        foreach (var itm in Model)
        {
            <div class="row border border-info mx-1">
                <div class="col-md-2">@itm.ComChannelID</div>
                <div class="col-md-4">@itm.Title_EN</div>
                <div class="col-md-2"><a href="@itm.Link">ref</a></div>
                <div class="col-md-2"><i class="@itm.Symbol"></i></div>
                <div class="col-md-1"><a href="/ComChannels/Delete/@itm.ComChannelID" class="btn btn-danger">Delete</a></div>
                <div class="col-md-1"><a href="/ComChannels/Update/@itm.ComChannelID" class="btn btn-primary">Update</a></div>
            </div>

        }
    }
    else
    {
        <div class="row">
            <div class="mx-auto"><h5>there is no data here</h5> </div>
        </div>
    }

</div>
<a href="/ComChannels/Add" class="btn btn-success">Add ComChannel</a>
